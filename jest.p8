bbox = {}

function bbox:new(o)
 o = o or {}
 setmetatable(o, self)
 self.__index = self
 return o
end

function bbox:l()
 return self.x
end

function bbox:r()
 return self.x+self.w
end

function bbox:u()
 return self.y
end

function bbox:d()
 return self.y+self.h
end

function bbox:ul()
 return {x=self.x,y=self.y}
end

function bbox:ur()
 return {x=self:r(),y=self.y}
end

function bbox:dl()
 return {x=self.x,y=self:d()}
end

function bbox:dr()
 return {x=self:d(),y=self:r()}
end

function bbox:center()
 return {x=self.x+self.w/2,
         y=self.y+self.h/2}
end

-- a2 > a1, b2 > b1
function spancol(a1,a2,b1,b2)
 if a1 > b1 then
  return spancol(b1,b2,a1,a2)
 end
 return b1 < a2
end

function rectcol(r1,r2)
 return spancol(r1.x,r1:r(),r2.x,r2:r())
    and spancol(r1.y,r1:d(),r2.y,r2:d())
end
