v2 = {}

function v2:new(o)
 o = o or {}
 if #o == 2 then
  o = {x=o[1],y=o[2]}
 end
 setmetatable(o, self)
 self.__index = self
 return o
end

function v2:len()
 return sqrt(self.x^2 + self.y^2)
end

function v2.__add(a,b)
 return v2:new{
  a.x+b.x,
  a.y+b.y,
 }
end

function v2.__sub(a,b)
 return v2:new{
  a.x-b.x,
  a.y-b.y,
 }
end

function v2.__mul(i,v)
 return v2:new{
  i*v.x,
  i*v.y,
 }
end
